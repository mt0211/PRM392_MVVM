<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="10dp"/> <!-- Đường cong góc, tùy chọn -->
            <padding android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="4dp"/> <!-- Điều chỉnh khoảng cách bóng -->
            <shadow android:color="#55000000" android:radius="8dp" android:dx="0dp" android:dy="2dp"/> <!-- Điều chỉnh màu sắc, độ mờ, vị trí bóng -->
        </shape>
    </item>
</layer-list>
